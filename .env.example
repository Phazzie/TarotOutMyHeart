# X.AI Grok API Configuration
# Get your API key from: https://x.ai
XAI_API_KEY=your_xai_api_key_here

# Grok Model Names
GROK_TEXT_MODEL=grok-4-fast-reasoning
GROK_IMAGE_MODEL=grok-image-generator

# Application Configuration
NODE_ENV=development

# Mock Services Toggle
# Set to 'false' to use real Grok API
# Set to 'true' to use mock services for development
USE_MOCKS=true

# Public Application URL
PUBLIC_APP_URL=http://localhost:5173

# Optional: Analytics
# Uncomment and add your analytics ID if using analytics
# PUBLIC_ANALYTICS_ID=

# Optional: Error Tracking
# Uncomment and add your Sentry DSN if using Sentry
# SENTRY_DSN=
# SENTRY_ENVIRONMENT=development

# Optional: Rate Limiting
# Configure rate limits for API calls (requests per minute)
# RATE_LIMIT_RPM=60

# Optional: Image Upload Limits
# MAX_IMAGE_SIZE_MB=10
# MAX_IMAGE_COUNT=5

# Optional: Debugging
# Set to 'true' to enable verbose logging
# DEBUG=false

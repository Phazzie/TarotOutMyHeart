# AI Coordination Server Configuration
# Copy this file to .env and update values as needed

# Server Configuration
PORT=3456                    # HTTP server port
USE_MOCKS=true              # Use mock services (set to false for production)
DEBUG=true                  # Enable debug logging
ENABLE_MCP=true            # Enable MCP server for GitHub Copilot
ENABLE_WEBSOCKET=true      # Enable WebSocket for real-time updates

# Database Configuration (when USE_MOCKS=false)
DB_TYPE=sqlite                      # Database type: sqlite or postgres (default: sqlite)
DATABASE_PATH=./coordination.db     # SQLite database file location (when DB_TYPE=sqlite)
# DATABASE_URL=postgresql://user:pass@localhost:5432/coordination  # PostgreSQL connection string (when DB_TYPE=postgres)
# POSTGRES_URL=postgresql://user:pass@localhost:5432/coordination  # Alternative PostgreSQL env var
# REDIS_URL=redis://localhost:6379  # Redis URL for distributed state (future feature)

# Security (optional)
# API_KEY=your-secret-key           # API key for authentication
# CORS_ORIGIN=http://localhost:3000 # CORS allowed origin

# Logging Configuration
LOG_LEVEL=info                    # Log level: error, warn, info, debug
LOG_FILE=./logs/coordination.log   # Main log file location
LOG_DIR=./logs                     # Log directory for rotation
ERROR_LOG_FILE=./logs/error.log    # Error log file location
LOG_MAX_FILES=14                   # Maximum number of rotated log files to keep
LOG_MAX_SIZE=10m                   # Maximum size per log file before rotation

# Performance
# MAX_CONCURRENT_TASKS=10           # Maximum tasks per agent
# TASK_TIMEOUT_MS=300000            # Task timeout (5 minutes default)
# LOCK_EXPIRY_MS=300000             # File lock expiry (5 minutes default)

# Rate Limiting
# RATE_LIMIT_WINDOW_MS=60000        # Rate limit window in milliseconds (default: 60000 = 1 minute)
# RATE_LIMIT_DEFAULT_REQUESTS=100   # Default requests per window for all agents (default: 100)
# RATE_LIMIT_CLAUDE_REQUESTS=100    # Requests per window for Claude agents (overrides default)
# RATE_LIMIT_COPILOT_REQUESTS=50    # Requests per window for Copilot agents (overrides default)
# RATE_LIMIT_EXCLUDE_PATHS=/health,/status  # Comma-separated paths to exclude from rate limiting